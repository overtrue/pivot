{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "webhook-label-demo",
  "type": "registry:example",
  "registryDependencies": [
    "https://pivotkit.vercel.app/r/webhook-label.json"
  ],
  "files": [
    {
      "path": "registry/example/webhook-label-demo.tsx",
      "content": "import { WebhookLabel } from \"@/registry/pivot/webhook-label\";\n\nexport default function WebhookLabelDemo() {\n  const webhookEvents = [\n    \"user.created\",\n    \"user.updated\",\n    \"user.deleted\",\n    \"order.placed\",\n    \"order.completed\",\n    \"payment.success\",\n    \"payment.failed\"\n  ];\n\n  return (\n    <div className=\"space-y-4 min-w-md\">\n      <div>\n        <h4 className=\"text-sm font-medium mb-3\">Webhook 事件标签</h4>\n        <div className=\"flex flex-wrap gap-2\">\n          {webhookEvents.map((event) => (\n            <WebhookLabel key={event}>{event}</WebhookLabel>\n          ))}\n        </div>\n      </div>\n\n      <div>\n        <h4 className=\"text-sm font-medium mb-3\">在 Webhook 文档中使用</h4>\n        <div className=\"space-y-2 p-3 border rounded-lg bg-neutral-50 dark:bg-neutral-900/50\">\n          <div className=\"flex items-center gap-3\">\n            <WebhookLabel children=\"user.created\" />\n            <span className=\"text-sm text-muted-foreground\">用户创建时触发</span>\n          </div>\n          <div className=\"flex items-center gap-3\">\n            <WebhookLabel children=\"order.placed\" />\n            <span className=\"text-sm text-muted-foreground\">订单下单时触发</span>\n          </div>\n          <div className=\"flex items-center gap-3\">\n            <WebhookLabel children=\"payment.success\" />\n            <span className=\"text-sm text-muted-foreground\">支付成功时触发</span>\n          </div>\n        </div>\n      </div>\n\n      <div>\n        <h4 className=\"text-sm font-medium mb-3\">自定义样式</h4>\n        <div className=\"flex flex-wrap gap-2\">\n          <WebhookLabel\n            children=\"custom.event\"\n            className=\"bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-400\"\n          />\n        </div>\n      </div>\n    </div>\n  );\n}\n",
      "type": "registry:example",
      "target": "components/example/webhook-label-demo.tsx"
    }
  ]
}